
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <link rel="stylesheet" href="/register.css">
    </head>
    <body>
        <div class="container mt-4">
            <div class="card" >
                <div class="card-header">
                  <h3>Register From</h3>     
                 </div>
                     <div class="card-body">
                          <form action="/auth/register" method="POST">
  <div class="mb-3">
       <label for="floatingInput">Enrollment Id</label>
     <input name="enrid" class="form-control top" id="floatingInput" placeholder="Enrollment ID" required autofocus>
      
  </div>
  <div class="mb-3">
      <label for="floatingInput">Name</label>
      <input name="name" class="form-control top" id="floatingInput" placeholder="Name" required>
       
  </div>
  <div class="mb-3">
      <label for="floatingInput">EmailID</label>
      <input name="email" class="form-control top" id="floatingInput" placeholder="EmailID" required >
       
  </div>
  <div class="mb-3">
      <label for="floatingInput">Role</label>
      <input type="role" name="role" class="form-control top" id="floatingInput" placeholder="Role" required >
       
  </div>
  <div class="mb-3">
      <label for="floatingInput">Branch</label>
      <input type="branch" name="branch" class="form-control top" id="floatingInput" placeholder="Branch" required >
       
  </div>
  <div class="mb-3">
      <label for="floatingInput">Password</label>
      <input type="password" name="password" class="form-control top" id="floatingInput" placeholder="Password" required >
       
  </div>
  <div class="mb-3">
      <label for="floatingInput">ConfirmPassword</label>
      <input type="password" name="cpassword" class="form-control top" id="floatingInput" placeholder="ConfirmPassword" required >
       
  </div>
  <button type="register" class="btn btn-primary">Register</button>
</form>
                 </div>
            </div>
          {{#if message }}
          <h6 class="alert alert-danger mt-2">{{message}}</h6>
          {{/if}}
        </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script>
  </body>
</html>
